html,body{
    height:100%;
    padding:0;
    margin:0;
    overflow:hidden;
    background:#000;
    text-align:center;
	background-image: url(<%= asset_path 'bg.jpg' %>);
	background-position:center center;
	background-size:cover;
}

.horizon{
	position:absolute;
	width:900px;
	height:900px;
	bottom:-550px;
	text-align:center;
	margin:auto;
	left: calc(50% - 450px);
	z-index:1000;
}
.doctorsHorizon{
	position:absolute;
	width:900px;
	height:900px;
	bottom:-350px;
	text-align:center;
	margin:auto;
	left: calc(50% - 450px);
	z-index:1000;
}

.mainScreen{
    position: absolute;
	width:100%;
	height:100%;
	top:0;
	left:0;
	z-index:1000;
}
.mainPlanet{
	width:100%;
	height:auto;
}
.logoWrapper{
	position:absolute;
	width:100%;
	height:100%;
}

.mainNav{
    position:relative;
}
.mainNav a{
    font-family:Arial, Helvetica, sans-serif;
    font-weight:700;
    font-size:30px;
    color:#000;
    text-decoration:none;
    display:block;
    width:150px;
    height:150px;
    border-radius:50%;
    text-align:center;
    line-height:150px;
	margin:auto;
}
.mainNav a:hover{
    color:#FFF;
}
.mercury a{
    background-color:#FC0;
}
.venus a{
    background-color:#90F;
}
.mars a{
    background-color:#F00;
}
.earth a{
    background-color:#21a64d;
}

.planet1Screen{
    width:150px;
    height:150px;
    position:fixed;
    top:20px;
    left:75px;
	z-index:2000;
}
.planet2Screen{
    width:150px;
    height:150px;
    position:fixed;
    top:20px;
    left:calc(50% - 75px);
	z-index:2000;
}
.planet3Screen{
    width:150px;
    height:150px;
    position:fixed;
    top:20px;
    right:75px;
	z-index:2000;
}

.doctor{
	position:fixed;
	width:200px;
	height:50px;
	right:20px;
	bottom:20px;
	z-index:4000;
}
.doctor a{
	display:block;
	background:#C00;
	color:#fff;
	border-radius:10px;
	text-decoration:none;
	font-family:Arial, Helvetica, sans-serif;
	text-transform:uppercase;
	font-size:20px;
	line-height:30px;
	height:30px;
	padding:0px 20px;
}
.doctor a:hover{
	color:#C00;
	background:#fff;
}